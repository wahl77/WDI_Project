- @items.each do |item|
  - first_image = item.images.first
  - if first_image.nil?
    .item_picture
      %h1
        = link_to item.name, item_path(item.id)
      %p
        = item.description
  - else
    .item_picture{style:"background: url(\"#{first_image.url}\"); background-size: 200px 200px; background-size: cover"}
      %h1
        = link_to item.name, item_path(item.id)
      %p
        = item.description
