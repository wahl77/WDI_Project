- @items.each do |item|
  - if item.images.empty?
    .item_picture
      %h1
        = link_to item.name, item_path(item.id)
      %p
        = item.description
  - else
    .item_picture{style:"background-position: center center; background: url(\"#{item.images.first.url unless item.images.empty?}\")"}
      %h1
        = link_to item.name, item_path(item.id)
      %p
        = item.description
