.container
  .row 
    .span6 
      %h2 Your items
      %h3 
        You currently have 
        = pluralize(@items.length, "item")
        listed

      %table{width: "100%"}
        - @items.each do |item|
          %tr
            %td= item.name
            %td
              = link_to "View", item_path(item.id)
              \|
              = link_to "Edit", edit_item_path(item.id)
              \|
              = link_to "Delete", item_path(item.id), method: :delete
        %br

      %br
      %br
      %br

      = link_to "New Item", new_item_path
