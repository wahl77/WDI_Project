.container
  .row 
    .span12
      %h1 
        Around Me
    

      - Category.all.each do |category|
        = check_box_tag category.id, category.id, checked:true
        = category.name
      %h3
        We found this around you
  .row
    .span12

      /= render partial:"layouts/map", locals:{place: @locations}

      .item_picture_list
        = render partial:"items"

      = will_paginate @all

  .row
    .span12
      .spinner{style:"display:none"}
        = image_tag "ajax-loader.gif"
